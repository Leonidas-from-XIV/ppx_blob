(jbuild_version 1)

(library
 ((name ppx_blob)
  (public_name ppx_blob)
  (kind ppx_rewriter)
  (modules ppx_blob)
  (flags (:standard -safe-string))
  (libraries (ocaml-migrate-parsetree))))

(executable
 ((name test)
  (preprocess (pps (ppx_blob)))
  (preprocessor_deps ((file test_file)))
  (modules test)
  (libraries (alcotest))))

(alias
 ((name runtest)
  (deps (test.exe))
  (package ppx_blob)
  (action (run ${<}))))

